{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "Boilerplate template for typescript and node",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "prod": "node lib/index.js",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "npx prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "node",
    "typescript",
    "template"
  ],
  "author": "Jonny",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^24.8.1",
    "axios": "^1.12.2",
    "husky": "^9.1.7",
    "jest": "^27.3.1",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
