{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "Boilerplate template for typescript and node",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "npx prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "node",
    "typescript",
    "template"
  ],
  "author": "Jonny",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
