{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "Boilerplate template for typescript and node",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts"
  },
  "keywords": [
    "node",
    "typescript",
    "template"
  ],
  "author": "Jonny",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.0.27",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
